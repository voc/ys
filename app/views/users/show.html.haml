%h2 Account Overview
%dl
  %dt Login name
  %dd= @user.login
  - unless @user.dect.empty?
    %dt DECT number
    %dd= @user.dect
  - unless @user.village.empty?
    %dt Village
    %dd= @user.village
  - unless @user.email.empty?
    %dt E-Mail address
    %dd= @user.email

%h2 Production
%a{href: edit_user_path(@user)} edit
%p
  %a{href: new_user_production_path(user_id: @user)} create new production
  - if @productions.count == 0
    %p
      No production defined.
  - else
    %table
      %thead
        %tr
          %th Title
          %th Description
          %th Start time
          %th End time
          %th Actions
      %tbody
        - @productions.each do |production|
          %tr
            %td= production.title
            %td= production.description
            %td= production.start_time
            %td= production.end_time
            %td
              %a{href: user_production_path({user_id: @user, id: production.id})} show
              %a{href: edit_user_production_path({user_id: @user, id: production.id})} edit
              %a{href: delete_user_production_path({user_id: @user, id: production.id})} delete
